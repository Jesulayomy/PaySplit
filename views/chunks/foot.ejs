<script>
  const subForm = document.getElementById('subscribe');
  subForm.addEventListener('submit', async (event) => {
    event.preventDefault();

    const name = subForm.name.value;
    const email = subForm.email.value;
    const subject = subForm.subject.value;
    const message = subForm.message.value;

    fetch('/contact', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        name,
        email,
        subject,
        message,
      })
    });
    const subButton = document.getElementById('subSubmit');
    subButton.innerText = 'Subscribed!';
    subButton.classList.toggle('btn-jasper');
    subButton.classList.add('btn-success');
    subForm.email = "";
  });
</script>